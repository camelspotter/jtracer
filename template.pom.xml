<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>jTracer</name>
    <packaging>jar</packaging>

    <groupId>net.libcsdbg</groupId>
    <artifactId>jtracer</artifactId>
    <version>1.04</version>

    <build>
        <plugins>
            <!-- Used to pass arguments to 'javac' -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <inherited>true</inherited>

                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <compilerArgument>-Xlint:all</compilerArgument>
                </configuration>
            </plugin>

            <!-- Used to configure the output jar and its manifest -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.0</version>
                <inherited>true</inherited>

                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${project.entryPoint}</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Title>${project.name} ${project.description}</Implementation-Title>
                            <Implementation-Vendor>${project.author}</Implementation-Vendor>
                            <Implementation-Version>${project.version}</Implementation-Version>
                            <SplashScreen-Image>${splash.screen}</SplashScreen-Image>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <!-- Used to package dependencies within the output jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <inherited>true</inherited>

                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <!-- Process resource files (based on the build profile) -->
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>

            <resource>
                <directory>${basedir}/target/dependency</directory>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>qi4j-releases</id>
            <url>https://repository-qi4j.forge.cloudbees.com/release/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Logging facade and bindings -->

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>${log4j1.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>${log4j2.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>${log4j2.version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>


        <!-- Qi4j core -->

        <dependency>
            <groupId>org.qi4j.core</groupId>
            <artifactId>org.qi4j.core.bootstrap</artifactId>
            <version>${qi4j.version}</version>
        </dependency>

        <dependency>
            <groupId>org.qi4j.core</groupId>
            <artifactId>org.qi4j.core.runtime</artifactId>
            <version>${qi4j.version}</version>
        </dependency>


        <!-- Qi4j libraries -->

        <dependency>
            <groupId>org.qi4j.library</groupId>
            <artifactId>org.qi4j.library.constraints</artifactId>
            <version>${qi4j.version}</version>
        </dependency>


        <!-- Qi4j tools -->

        <dependency>
            <groupId>org.qi4j.tool</groupId>
            <artifactId>org.qi4j.tool.envisage</artifactId>
            <version>${qi4j.version}</version>
        </dependency>
    </dependencies>

    <properties>
        <!-- Logging facade and bindings -->
        <log4j1.version>1.2.17</log4j1.version>
        <log4j2.version>2.1</log4j2.version>
        <slf4j.version>1.7.7</slf4j.version>

        <!-- Qi4j core, extensions, libraries and tools -->
        <qi4j.version>2.1</qi4j.version>

        <project.author>Tasos Parisinos</project.author>
        <project.author.mail>t.parisinos@gmail.com</project.author.mail>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.copyright>2013-2017</project.copyright>
        <project.description>C/C++ Stack Trace Visualizer</project.description>
        <project.entryPoint>${project.groupId}.${project.artifactId}.core.ApplicationCore</project.entryPoint>
        <project.license>GNU General Public Licence v3</project.license>
        <project.poweredBy>Zest@Apache Software Foundation</project.poweredBy>
        <runtime.user>tasosp</runtime.user>
    </properties>

    <profiles>
    </profiles>
</project>
